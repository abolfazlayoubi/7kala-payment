{
  "name": "payment-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "database.hostname": "payment-db",
    "database.port": "3306",
    "database.user": "root",
    "database.password": "1",
    "database.server.id": "100",
    "database.server.name": "payment",
    "database.history.store.only.monitored.tables.ddl": "true",
    "topic.prefix": "payment",
    "table.include.list": "payment.products_context,payment.product_prices",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schema-changes.paymentService",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": false,
    "value.converter.schemas.enable": false,
    "snapshot.mode": "initial",
    "include.schema.changes": false,
    "time.precision.mode": "connect",
    "decimal.handling.mode": "double",
    "errors.retry.timeout": "10000",
    "errors.retry.delay.max.ms": "30000",
    "errors.tolerance": "all",
    "errors.log.enable": true,
    "errors.log.include.messages": true,
    "database.connectionRetryAttempts": "20",
    "database.connectionRetryBackoff.ms": "5000"
  }
}